@model FinalProject.Models.ViewModels.ProductVM

@{
    var title = "Create Product";
}

<form method="post" asp-action="Upsert">
    @if (Model.Products.Id != 0)
    {
        title = "Edit Product";
        <input asp-for="Products.Id" hidden />
    }
    <div class="border p-3">

        <div class="form-group row">
            <h2 class="text-info pl-3">@title</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Products.Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Products.Name" class="form-control" />
                        <span asp-validation-for="Products.Name" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Products.Description"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="Products.Description" class="form-control summernote"></textarea>
                        <span asp-validation-for="Products.Description" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Products.Image"></label>
                    </div>
                    <div class="col-8">
                        <input type="file" name="files" id="uploadBox" multiple class="form-control" />

                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Products.BrandId"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="Products.BrandId" asp-items="@Model.DropDown" class="form-control">
                            <option disabled selected>---Select Brand---</option>
                        </select>
                        <span asp-validation-for="Products.BrandId" class="text-danger"></span>
                    </div>

                </div>


                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            @if (Model.Products.Id == 0)
                            {
                                //create
                                <input type="submit" onClick="return validateInput()" class="btn btn-info w-100" value="Create" />
                            }
                            else
                            {
                                //update
                                <input type="submit" onClick="return validateInput()" class="btn btn-primary w-100" value="Update" />
                            }

                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>

</form>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script>
        $(document).ready(function () {
            $('.summernote').summernote();
            height: 250
        });
        function validateInput() {
            if (document.getElementById("uploadBox").value == "") {
                Swal.fire(
                    'Error!',
                    'Pleace upload an image',
                    'error'
                )
                return false;

            }
            return true;
        }
    </script>
}
