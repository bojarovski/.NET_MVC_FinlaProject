

@model IEnumerable<FinalProject.Models.Products>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Products List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Products" asp-action="Upsert" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Create New Category
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Product Name
                    </th>
                    <th>
                        Product Description
                    </th>
                    <th>
                        Product Material
                    </th>
                    <th>
                        Product Size
                    </th>
                    <th>
                        Product Price
                    </th>
                    <th>
                        Edit
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width="10%">@obj.Name</td>
                    <td width="30%">@obj.Description</td>
                    <td width="10%">@obj.Material</td>
                    <td width="10%">@obj.SizeS @obj.SizeM @obj.SizeL @obj.SizeXL @obj.SizeXXL</td>
                    <td width="20%">@obj.Price</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Products" asp-route-Id="@obj.Id" asp-action="Upsert" class="btn btn-primary mx-2">
                                <i class="fas fa-edit"></i>&nbsp;Edit
                            </a>
                            <a asp-controller="Products" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                <i class="far fa-trash-alt"></i>&nbsp;Delete
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No products exists.</p>
    }

</div>

